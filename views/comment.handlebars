{{#if posts.length}}
    {{#each posts as |post|}}
    <div class="card">

        <div class="card-body">
            <h5 class="card-title">{{post.title}}</h5>
            <p class="card-text">{{post.text}}</p>
            <p class="card-text">{{post.date_posted}}</p>
        </div>
        <div class="form-group">
            <label for="comment">Comments:</label>
            <input type="text" placeholder="Enter your comments here!" id="comment" />
        </div>
        <div class="">
            <textarea class="w-100 mb-5" name="comment" id="comment" cols="30" rows="5"></textarea>
            <button class="btn btn-warning me-2" id="postComment">Save Comment</button>
        </div>
    </div>
    {{/each}}
{{else}}
    <div class="card">
  <div class="card-header">
    Featured
  </div>
  <div class="card-body">
    <h5 class="card-title">There are no posts</h5>
    <p class="card-text">Make a new one and get started!</p>
  </div>
</div>
{{/if}}

<script src="../../js/comment.js"></script>