{{#if posts.length}}
    {{#each posts as |post|}}
    <div class="card">

        <div class="card-body">
            <h5 class="card-title">{{post.title}}</h5>
            <p class="card-text">{{post.text}}</p>
            <p class="card-text">{{post.date_posted}}, {{user.name}}</p>
        </div>
        <div class="d-flex justify-content-center"> 
          <a href="/dashboard/post/{{id}}"><img src="/images/edit.png" class="img" alt="edit"></a>
          <a href="/dashboard/post/{{id}}"><img src="/images/delete.jpg" class="img" alt="edit"></a>
          {{!-- <a href="/dashboard/comment/{{id}}"><img src="/images/comment.jpg" class="img" alt="edit"></a> --}}
        </div>
    </div>
    {{/each}}
{{else}}
    <div class="card">
  <div class="card-header">
    Featured
  </div>
  <div class="card-body">
    <h5 class="card-title">There are no posts</h5>
    <p class="card-text">Make a new one and get started!</p>
  </div>
</div>
{{/if}}