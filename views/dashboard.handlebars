{{#if posts.length}}
    {{#each posts as |post|}}
    <div class="card">

        <div class="card-body">
            <h5 class="card-title">{{post.title}}</h5>
            <p class="card-text">{{post.text}}</p>
        </div>
    </div>
    {{/each}}
{{else}}
    <div class="card">
  <div class="card-header">
    Featured
  </div>
  <div class="card-body">
    <h5 class="card-title">There are no posts</h5>
    <p class="card-text">Make a new one and get started!</p>
  </div>
</div>
{{/if}}